<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView
				android:id="@+id/wator_logo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/dark_water"
				android:scaleType="fitEnd"
				android:src="@drawable/wator_logo"
				android:padding="20dp"
				android:contentDescription="@string/wator_logo_description"/>
		<TextView
				android:id="@+id/drawer_subtitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/wator_synopsis"
				android:textSize="16sp"
				android:layout_alignBottom="@id/wator_logo"
				android:layout_alignLeft="@id/wator_logo"
				android:layout_alignStart="@id/wator_logo"
				android:padding="10dp"
				android:textColor="@android:color/white"/>
		<TextView
				android:id="@+id/drawer_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/wator_name"
				android:textColor="@android:color/white"
				android:textSize="24sp"
				android:textStyle="bold"
				android:padding="10dp"
				android:layout_above="@id/drawer_subtitle"
				android:layout_alignLeft="@id/drawer_subtitle"
				android:layout_alignStart="@id/drawer_subtitle"/>

		<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/wator_logo"
				android:stretchColumns="1"
				android:padding="14sp">
			<TableRow android:padding="4dp">
				<TextView
						android:id="@+id/version_label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2sp"
						android:text="@string/version_label"
						android:textStyle="bold"
						android:labelFor="@+id/version"/>
				<TextView
						android:id="@+id/version"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2sp"/>
			</TableRow>
			<TableRow android:padding="4dp">
				<TextView
						android:id="@+id/website_label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2sp"
						android:text="@string/website_label"
						android:textStyle="bold"
						android:labelFor="@+id/website"/>

				<TextView
						android:id="@+id/website"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:autoLink="web"
						android:padding="2sp"
						android:text="@string/website"/>
			</TableRow>
			<TableRow android:padding="4dp">
				<TextView
						android:id="@+id/copyright_label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2sp"
						android:text="@string/copyright_label"
						android:textStyle="bold"
						android:labelFor="@+id/copyright"
				/>
				<TextView
						android:id="@+id/copyright"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2sp"
						android:text="@string/copyright"/>
			</TableRow>
			<TableRow android:padding="4dp">
				<TextView
						android:id="@+id/license_label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2sp"
				        android:text="@string/license_label"
				        android:textStyle="bold"
				        android:labelFor="@+id/license"/>
				<TextView
						android:id="@+id/license"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2sp"
						android:text="@string/license"/>
			</TableRow>
		</TableLayout>
	</RelativeLayout>

</ScrollView>
